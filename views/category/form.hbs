<section class="breadcrumb_part breadcrumb_bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb_iner">
                        <div class="breadcrumb_iner_item">
                            <h2 style="margin-top:1em;">{{name}}</h2>
                            {{#if fromCreate}}
                                <h2 style="margin-top:1em;">Create New Category</h2>
                            {{/if}}
                            {{#if fromUpdate}}
                                <h2 style="margin-top:1em;">{{category.name}}</h2>
                            {{/if}}
                            <p class='page-details'>Category is to structure blog posts</p>
                            <br/>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

<section>
        <div class="container" style='margin-top:2em;'>
            <form novalidate method="POST" to="/category/{{#if fromCreate}}create{{/if}}{{#if fromUpdate}}{{id}}/update{{/if}}" class='medhawk-admin-form'>
                {{#if fieldErrors}}
                    <div class="alert alert-danger">
                        {{#each fieldErrors.errors}}
                            <p><span class="badge badge-danger">{{this.param}}</span> {{this.msg}}</p>
                        {{/each}}
                    </div>
                {{/if}}
                {{#if err}}
                    <div class="alert alert-danger"><p>{{err}}</p></div>
                {{/if}}
                <div class="form-group">
                    <input type="text" class="form-control" name='name' placeholder="Category name" required value="{{category.name}}">
                </div>
                {{#if category.image_url}}
                    <img src="{{category.image_url}}" alt="">
                {{/if}}
                <div class="form-group">
                    <input type="text" class="form-control" name='image_url' placeholder="Paste image link here" required value="{{category.image_url}}">
                </div>
                <div class="form-group">
                    <textarea 
                        name="description" 
                        id="editor" 
                        cols="30" 
                        rows="10"
                        class="form-control"
                        placeholder="Write someting about the category"
                    >{{category.description}}</textarea>
                </div>
                <input type="hidden" value="{{csrfToken}}" name="_csrf">
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type='submit'>{{#if fromCreate}}Create{{/if}}{{#if fromUpdate}}Update{{/if}} Category</button>
                </div>
            </form>
        </div>
    </section>