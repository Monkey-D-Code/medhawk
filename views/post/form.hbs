<section class="breadcrumb_part breadcrumb_bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb_iner">
                        <div class="breadcrumb_iner_item">
                            
                            {{#if fromCreate}}
                                <h2 style="margin-top:1em;">Create New Post</h2>
                            {{/if}}
                            {{#if fromUpdate}}
                                <h2 style="margin-top:1em;">{{post.title}}</h2>
                            {{/if}}
                            
                            <br/>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

<section>
        <div class="container" style='margin-top:2em;'>
            <form novalidate method="POST" to="/post/{{#if fromCreate}}{{category.id}}create{{/if}}{{#if fromUpdate}}{{post.id}}/update{{/if}}" class='medhawk-admin-form'>
                {{#if fieldErrors}}
                    <div class="alert alert-danger">
                        {{#each fieldErrors.errors}}
                            <p><span class="badge badge-danger">{{this.param}}</span> {{this.msg}}</p>
                        {{/each}}
                    </div>
                {{/if}}
                {{#if err}}
                    <div class="alert alert-danger"><p>{{err}}</p></div>
                {{/if}}
                <div class="form-group">
                    <input type="text" class="form-control" name='title' placeholder="Your Post title" required value="{{post.title}}">
                </div>
                {{#if post.cover_image_url}}
                    <img src="{{post.cover_image_url}}" alt="">
                {{/if}}
                <div class="form-group">
                    <input type="text" class="form-control" name='cover_image_url' placeholder="Paste image link here" required value="{{post.cover_image_url}}">
                </div>
                <div class="form-group">
                    <textarea 
                        name="body" 
                        id="editor" 
                        cols="30" 
                        rows="10"
                        class="form-control"
                        placeholder="Write someting about the category"
                    >{{post.body}}</textarea>
                </div>
                <input type="hidden" value="{{csrfToken}}" name="_csrf">
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type='submit'>{{#if fromCreate}}Create{{/if}}{{#if fromUpdate}}Update{{/if}} Post</button>
                </div>
            </form>
        </div>
    </section>