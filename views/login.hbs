<style>
    #login{
        width: 40%;
        display: block;
        margin : auto;
    }
</style>



<section class="breadcrumb_part breadcrumb_bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb_iner">
                        <div class="breadcrumb_iner_item">
                            <h2 style="margin-top:1em">Login</h2>
                            <h4>Loggin into medhawk provides extra functionality & access</h4>
                            <p class='page-details'>So far only admin can access what beyond this.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <br/>
    <br/>
    <section id='login'>
        <form method="POST" to="/auth/login">
            {{#if error}}
                <div class="alert alert-danger">
                    <h4 class='text-center'>{{error}}</h4>
                </div>
            {{/if}}
            <div class="form-group">
                <input class="form-control" name="email" type="email" onfocus="this.placeholder = ''"
                        onblur="this.placeholder = 'Email" placeholder='Email Address' required>
            </div>
            <div class="form-group">
                <input class="form-control" name="password" type="password" onfocus="this.placeholder = ''"
                        onblur="this.placeholder = 'Enter your password'" placeholder='Enter your password'>
            </div>
            <input type="hidden" value="{{csrfToken}}" name="_csrf">
            <div class="form-group mt-3">
                <button type="submit" class="button button-contactForm btn_1">Login</button>
            </div>

        </form>
        
    </section>
