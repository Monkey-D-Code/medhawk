
 <!-- breadcrumb start-->
    <section class="breadcrumb_part breadcrumb_bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb_iner">
                        <div class="breadcrumb_iner_item">
                            <h2 style="margin-top:1em">Update</h2>
                            <h4>{{heading}}</h4>
                            <p class='page-details'>Edit anytime to keep medhawk updated.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

<section style="margin-top:5em;">
    <div class="container">
        {{#if err}}
            <div class="alert alert-error text-center">
                {{err}}
            </div>
        {{/if}}
        {{#if successMessage}}
            <div class="alert alert-success text-center">
                {{successMessage}}
            </div>
        {{/if}}
        {{#if errorMessage}}
            <div class="alert alert-error text-center">
                {{errorMessage}}
            </div>
        {{/if}}
        <form class='medhawk-admin-form' method="POST" to="/service/{{id}}/update">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Heading" name="heading" value="{{heading}}" required>
                
            </div>
            <div class="form-group">
                <textarea name="description" id="" cols="30" rows="10" class="form-control" placeholder="Decribe the service" required>{{description}}</textarea>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Paste Image link here" name="imageUrl" value="{{imageUrl}}" required>
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block" type="submit">Update {{heading}}</button>
            </div>
        </form>
    </div>
</section>